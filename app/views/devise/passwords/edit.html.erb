<section class="form-style-1 bg-hue-yellow py-5 background-cover">
<div class="container">
  <div class="row">
    <div class="col-sm-5 col-10 mx-auto text-center">
      <div class="card p-4 my-4 material-shadow">
        <h3 class="lighter text-center py-2">Modifier mon mot de passe</h3>
        <hr>

<h2>Changement de</h2> 
<h2>mot de passe</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nouveau mot de passe" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Changer mon mot de passe", class: "btn btn-light btn-rounded m-2" %>
  </div>
      
      <% end %>

     </div>
    </div>
  </div>
</div>

