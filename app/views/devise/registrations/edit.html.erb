<%= render 'layouts/navbar' %>

<div class="user-edit">
<div class="container">
<div class="card border-0 shadow my-5">
  <div class="card-body p-5">
    <h1 class="font-weight-light">Bonjour, <%= current_user.first_name%> <% resource_name.to_s.humanize %> ðŸŒž</h1>
    <hr>
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :last_name, "Nom :" %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
      </div>
        <br>

      <div class="field">
        <%= f.label :first_name, "PrÃ©nom :" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
        <br>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email,  autocomplete: "email", class: "form-control" %>
      </div>
        <br>

      <div class= 'form-group'>
      <%= f.label :phone_number "Telephone :" %><br />
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
      <br>
        
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
        <br>
      <div class="field">
        <%= f.label :password, "Mot-de-passe" %> <i>(Laisse vide si tu ne veux pas changer)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
        <br>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmer le mot-de-passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br>

      <div class="field">
        <%= f.label :current_password, "Mot-de-passe actuel" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
        <br>
      <div class="actions text-center">
        <%= f.submit "Mettre Ã  jour", class:"btn btn-primary btn-rounded my-2" %>
       </div>
    <% end %>

      <hr>
      <br><br><br>
    <h3 class="font-weight-light text-center"> Tu veux supprimer ton compte? </h3>
      <div class="actions text-center">
        <%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-rounded my-2" %>
      </div>
    <%= link_to "Retour", :back %>
  </div>
</div>
</div>
</div>