<%if flash[:danger] %>
<div class="alert alert-danger text-center" role="alert">
  <%=flash[:danger] %>
</div>
<% end %>
<div class="container mx-auto px-5">
  <div class="card material-shadow m-5" id="store">
    <div class="card-body">

      <div class="row">
        <div class="col-12 mx-auto text-center">
        
          <h1 class="text-center">Créer un nouveau local :</h1>
          <hr>

          <%= form_with model: @store, url: admin_stores_path, method: 'post',local: true, class: 'col-5 offset-5 mx-auto' do |f| %>                  
          

            <div class= 'form-group'>
              <label> Nom du local : </label>
              <%= f.text_field :name, class: 'form-control' %>
            </div>            

            <div class= 'form-group'>
              <label> Adresse : </label>
              <%= f.text_field :place, class: 'form-control' %>
            </div>

            <div class= 'form-group'>
              <label> Code postal : </label>
              <%= f.text_field :zip_code, class: 'form-control' %>
            </div>

            <div class= 'form-group'>
              <label> Ville : </label>
              <%= f.text_field :city, class: 'form-control' %>
            </div>

            <div class= 'form-group'>
              <label> Quartier: </label>
              <%= f.text_field :sector, class: 'form-control' %>
            </div>

            <hr>

            <%= f.hidden_field :creator, value: current_user %>
            <%= f.submit "Créer le local", class: 'btn btn-lg btn-success btn-rounded' %>

          <% end %>

          <br>
          
        </div>
      </div>

    </div>
  </div>
</div>