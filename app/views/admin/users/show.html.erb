<h3>Mon profil: </h3>
  <p>Prénom : <%=@user.first_name%><p>
  <p>Nom: <%=@user.last_name%><p>
  <p>Email: <%=@user.email%><p>
  <p>Telephone : <%=@user.phone_number%><p>
  <% if @user.address_id != nil %>
  <p>Adresse : <%=@user.address.place%><p>
  <p>Ville : <%=@user.address.city%><p>
  <%end%>
  <% if @user.store_id != nil %>
  <p>Boutique de réference : <%=@user.store.name%><p>
  <%end%>

  <%=link_to "Modifier le profil", edit_admin_user_path(@user.id),  class: 'btn btn-sm btn-outline-dark ml-1' %>

  <%=link_to "Supprimer", admin_user_path(@user.id), method: :delete, class: 'btn btn-sm btn-outline-dark ml-1' %>

  <center>
    <div class="card-deck"></center>
  
      <% @events.each do |event| %>

        <% if @user == event.creator_id %>
  <center>
    <div class="card" style="width: 50rem;">
      <h5 class="card-header"><%=event.creator.last_name%></h5>
        <div class="card-body">
          <h5 class="card-title"><%=event.title%></h5>
          <%= link_to "voir l'evenement", event_path(liste.id) %>
        </div>
    </div>
<center>
</br>
</br>

<% end %>
<% end %>
</div>
</center>