<center>
<%if flash[:danger] %>
    <div class="alert alert-danger text-center" role="alert">
      <%=flash[:danger] %>
    </div>
  <% end %>
<h4>Modifier la quantité de <%=@stock.product.name%> dans le local <%=@stock.store.name%> : </h4>

<%= form_with model: @stock, local: true, url: admin_store_product_path(@stock), method: 'put' do |f| %> 

  <div class="table-responsive">

    <table class="table">
      <tr>
        <td><%= f.text_field :quantity, class: 'form-control', value: @stock.quantity %></td>
        <td><%= f.select :unit, Unit.pluck(:name, :id), selected: @stock.unit_id, class: 'form-control' %></td>
      </tr>
    </table>
  </div>
    
  <div class='actions'>
    <%= f.submit "mettre à jour", class: 'btn btn-lg btn-outline-secondary' %>
  </div>
</center>
 

  <% end %>