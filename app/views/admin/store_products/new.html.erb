<center>
<h3>Ajouter un produit au stock d'un local: </h3>

<%= form_with model: @stock, local: true, url: admin_store_products_path, method: 'post' do |f| %> 
  

  <%if flash[:danger] %>
    <div class="alert alert-danger text-center" role="alert">
      <%=flash[:danger] %>
    </div>
  <% end %>
  <div class= 'form-group'>
    <label> Nom du produit : </label>
    <%= f.select :product, Product.pluck(:name, :id), class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> local : </label>    
    <%= f.select :store, Store.pluck(:name, :id), class: 'form-control' %>
  </div>

  <div class= 'form-group'>
    <label> quantit√© : </label>
    <%= f.text_field :quantity, class: 'form-control' %> <%= f.select :unit, Unit.pluck(:name, :id), class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
  </center>
 

  <% end %>