<center>
<h4>Ajouter une unité: </h4>

<%= form_for @newunit, url: admin_units_path, method: 'post' do |f| %> 
  
  
  <%if flash[:danger] %>
    <div class="alert alert-danger text-center" role="alert">
      <%=flash[:danger] %>
    </div>
  <% end %>
  <div class= 'form-group'>
    <label> Unité : </label>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
  </center>
 

  <% end %>