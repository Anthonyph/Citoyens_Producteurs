<div class="container">
  <div class="card border-0 shadow my-5" id="event">
    <div class="card-body p-5">

      <h1 class="font-weight-light">Liste des √©venements üçì</h1>
      <hr>

      <div class="row">

        <div class="col-md-8 col-sm-12 p-0">

          <% @events.each do |event| %>
          
          <div class="card mb-4">

            <div class="card-header bg-white">

              <h2 class="m-0"><%= event.title %>
              <% if event.event_type.id == 1 %>
                <span class="badge badge-pill badge-success float-right"><%= event.event_type.name %></span>
              <% elsif event.event_type.id == 2 %>
                <span class="badge badge-pill badge-danger float-right"><%= event.event_type.name %></span>
              <% elsif event.event_type.id == 3 %>
                <span class="badge badge-pill badge-warning float-right"><%= event.event_type.name %></span>
              <% end %>
              </h2>

            </div>

            <img class="card-img-top p-1" src="https://images.pexels.com/photos/1656665/pexels-photo-1656665.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="Card image cap">
            
            <div class="card-body p-2">

              <ul class="list-group list-group-flush">
                <li class="list-group-item">Le <%=l(event.start_date, format: "%-d %B %Y √† %Hh %M")%></li>
                <% if event.appointments.count > 0 %> 
                  <li class="list-group-item"><%= event.appointments.count > 1 ? 'Nombre de participants : ' : 'Nombre de participant : ' %> <%= event.appointments.count %></li>
                <% else %>
                  <li class="list-group-item">Aucun participant</li>
                <% end %>
                <li class="list-group-item">Quartier : <%= event.address.sector %></li>
                <li class="list-group-item">Local : <%= event.address.city%></li>
              </ul>

              <div class="text-center">

                <%= link_to "Voir l'√©venement", event_path(event.id), class:"btn btn-md btn-info btn-block mt-2 mb-1" %>
              
              </div>

            </div>

          </div>

          <% end %>

        </div>

        <div class="col-md-4 events-aside">

          <div class="card mb-4"> 
            
            <div class-="card-header">
              <h5 class="card-header bg-white">Et si tu cr√©ais ton √©v√©nement?</h5>
            </div>  

            <div class="card-body text-center">
              <p>
              Proposer une r√©colte, livraison, pr√©paration...
              </p>
              <%= link_to 'Proposer', new_event_path, class: 'btn btn-md btn-success btn-rounded' %>
            </div>

          </div>

          <div class="card my-4">
            <h5 class="card-header bg-white">Rechercher</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="üîç">
                <span class="input-group-btn">
                  <button class="btn btn-info" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <div class="card my-4">

            <h5 class="card-header bg-white">Local</h5>

            <div class="card-body p-1">
              <div class="row">
                <div class="col-lg-12">

                  <section class="showcase-style-2 p-relative bg-white p-0">
                    <div class="container events-store">
                      <div class="row-12 ">

                        <% @stores.each do |store| %>

                          <div class="col-12 p-1">
                            <div class="card background-cover flat no-border" style="background-image:url('https://images.pexels.com/photos/2079438/pexels-photo-2079438.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
                              <div class="showcase-details p-absolute w-100 h-100 text-center d-none align-center flex-column justify-center h1">
                                <i class="fa fa-heart cdanger"></i>
                                <h2 class="cwhite p-2 font-title"><%= store.name %></h2>
                              </div>
                            </div>
                          </div>

                        <% end %>

                      </div>
                    </div>
                  </section>

                </div>
              </div>
            </div>

          </div>

        </div>
      </div>

    </div>
  </div>
</div>

