  <div class="container shop-show p-0">

  <div class="row">

    <div class="col-md-8 col-sm-12 p-0"><br>

      <div class="card-columns events-card-columns">

        <% @events.each do |event| %>

        <div class="card mb-4">
          <img class="card-img-top" src="https://images.pexels.com/photos/1656665/pexels-photo-1656665.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title">event.title</h2>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">event.start_date : ...</li>
            <li class="list-group-item">event.appointments.count : ...</li>
            <li class="list-group-item">event.address.sector : ...</li>
            <%= link_to "Voir", event_path(event.id), class:"btn btn-primary" %>
          </ul>
          </div>
          <div class="card-footer text-muted">
            event.UPDATED_AT
          </div>
        </div>

        <% end %>

      </div>
      
    </div>


    <div class="col-md-4 events-aside">

      <div class="card my-4">
        <h5 class="card-header">Side Widget</h5>
        <div class="card-body">
          You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
        </div>
      </div>

      <div class="card my-4">
        <h5 class="card-header">Rechercher :</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>

      <div class="card my-4">
        <h5 class="card-header">Villes :</h5>
        <div class="card-body p-1">
          <div class="row">
            <div class="col-lg-12">

              <section class="showcase-style-2 p-relative bg-white p-0">
                <div class="container events-city">
                  <div class="row-12 ">

                    <div class="col-12 p-1">
                      <div class="card background-cover flat no-border" style="background-image:url('https://images.pexels.com/photos/518557/pexels-photo-518557.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
                        <div class="showcase-details p-absolute w-100 h-100 text-center d-none align-center flex-column justify-center h1">
                          <i class="fa fa-heart cdanger"></i>
                          <h2 class="cwhite p-2 font-title">Bourg-la-Reine</h2>
                        </div>
                      </div>
                    </div>

                    <div class="col-12 p-1">
                      <div class="card background-cover flat no-border" style="background-image:url('https://images.pexels.com/photos/552779/pexels-photo-552779.jpeg?cs=srgb&dl=clouds-cloudy-country-distance-552779.jpg&fm=jpg');">
                        <div class="showcase-details p-absolute w-100 h-100 text-center d-none align-center flex-column justify-center h1">
                          <i class="fa fa-heart cdanger"></i>
                          <h2 class="cwhite p-2 font-title">Montpellier</h2>
                        </div>
                      </div>
                    </div>

                    <div class="col-12 p-1">
                      <div class="card background-cover flat no-border" style="background-image:url('https://images.pexels.com/photos/358532/pexels-photo-358532.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
                        <div class="showcase-details p-absolute w-100 h-100 text-center d-none align-center flex-column justify-center h1">
                          <i class="fa fa-heart cdanger"></i>
                          <h2 class="cwhite p-2 font-title">Etc..</h2>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              </section>

            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>

<% @events.each do |event| %>
<ul>
  <li> <%= event.title %> </li>
  <li> <%= event.start_date %></li>
  <li> <%= event.end_date %></li>
  <li> <%= event.address.city%></li>
  <li> <%= event.address.sector%></li>
  <li> <%= event.appointments.count%></li>
  </ul>


  <%end%>
