<section class="form-style-1 bg-hue-yellow py-5 background-cover">
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-10 mx-auto text-center">
      <div class="card p-4 my-4 material-shadow">
        <h3 class="lighter text-center py-2">Créer un événement</h3>
        <hr>

        <%= form_with model: @event, local: true, class: 'mt-5 col-4 offset-4' do |f| %>
          <div class= 'form-group'>
            <label> Type de l'évenement : </label>
            <%= f.select :type, EventType.pluck(:name, :id), class: 'form-control' %>
          </div>
          <hr>
            <%if flash[:danger] %>
          <div class="alert alert-danger text-center" role="alert">
            <%=flash[:danger] %>
          </div>
            <% end %>

          <div class= 'form-group'>
            <label> Titre : </label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Description :</label>
            <%= f.text_field :description, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Date de début : </label>
            <%= f.datetime_field :start_date, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Date de fin : </label>
            <%= f.datetime_field :end_date, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Adresse : </label>
            <%= f.text_field :place, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Code postal : </label>
            <%= f.text_field :zip_code, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Ville : </label>
            <%= f.text_field :city, class: 'form-control' %>
          </div>

          <div class= 'form-group'>
            <label> Secteur : </label>
            <%= f.text_field :sector, class: 'form-control' %>
          </div>

        <hr>
        <%= f.hidden_field :creator, value: current_user %>
        <%= f.submit "Créer l'évenement", class: 'btn btn-lg btn-success btn-rounded' %>
        <% end %>
      <br>
    </div>
  </div>
</div>
</section>