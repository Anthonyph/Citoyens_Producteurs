<%= form_with model: @event, class: 'mt-5 col-4 offset-4' do |f| %>
  <div class= 'form-group'>
    <label> type </label>
    <%= f.select :type, EventType.pluck(:name, :id), class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> title </label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> description </label>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> start_date </label>
    <%= f.datetime_field :start_date, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> end_date </label>
    <%= f.datetime_field :end_date, class: 'form-control' %>
  </div>
    <div class= 'form-group'>
    <label> place </label>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> zip_code </label>
    <%= f.text_field :zip_code, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> city </label>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <label> sector </label>
    <%= f.text_field :sector, class: 'form-control' %>
  </div>
  <%= f.hidden_field :creator, value: current_user %>
  <%= f.submit 'Create', class: 'btn btn-primary' %>
<% end %>
