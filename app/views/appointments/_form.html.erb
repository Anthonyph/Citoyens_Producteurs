 <div class='container'>
    <%= form_with(model: @appointment, url: [@appointment.event, @appointment], local: true) do |form| %>
        <h6> Choisir un créneau : </h6>
        <p>
          <label> Date de début : </label>
          <%= form.datetime_field :start_date, class: 'col-3 form-control' %>
        </p>
        <p>
          <label> Durée de participation : </label>
          <%= form.number_field :duration, in: 10..300, step: 5, value: 30 %>
          <%= form.hidden_field :points, value: 0 %>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :event_id, value: @appointment.event.id %>
        </p>
        <%= form.submit "Participer" %>
    <% end %>
  </div>