<section class="form-style-1 bg-hue-yellow py-5 background-cover">
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-10 mx-auto">
      <div class="card p-4 my-4 material-shadow text-center">
        <h3 class="lighter text-center py-2">Choisir un créneau </h3>
        <hr>
        <%= form_with(model: @appointment, url: [@appointment.event, @appointment], local: true) do |form| %>
        <p>
          <label> Début : </label><br>
          <%= form.datetime_field :start_date, class: "col-4 form-control" %>
        </p>
        <p>
          <label> Temps de participation : </label>
          <%= form.number_field :duration, in: 10..300, step: 5, value: 30 %>
          <%= form.hidden_field :points, value: 0 %>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :event_id, value: @appointment.event.id %>
        </p>
        <%= form.submit "Participer", class: "btn btn-success btn-rounded m-2"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</section>