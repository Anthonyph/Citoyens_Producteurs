
<body class="show-store">
  <div class="container">
   
    <div class="card border-0 shadow my-5">
      <div class="card-body p-5">

        <!-- Page Content -->
        <div class="container">
        <div class="jumbotron jumbotron-fluid jumbo text-center">
          <h1>Citoyens Producteurs<br>Bourg-la-Reine</h1>
        </div>
          <!-- Heading Row -->
          <div class="row my-5">

            <div class="col-lg-7">
              <img class="img-fluid rounded mb-4 mb-lg-0" src="/assets/market.jpeg" alt="">
            </div>
            <!-- /.col-lg-8 -->
            <div class="col-lg-5">
              <h1 class="font-weight-light">Info :</h1>
              <p>Blabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasinBlabla decriptif magasin</p>
            </div>
            <!-- /.col-md-4 -->
          </div>
          <!-- /.row -->

          <div class="jumbotron jumbotron-fluid call-to-action">
            <div class="container text-center">
              <h1>Produits en stocks</h1>
              <hr>
              <div class="row">
                <div class=col>
                  <p class="lead">Une idées de recettes ?<br><br><%= link_to 'Créer un évènement', new_event_path, class: 'btn btn-md btn-outline-secondary' %></p>
                </div>
                <div class="col">
                  <p class="lead">Voir les évenements <br><br><%= link_to "Voir les évenements", events_path, class:"btn btn-md btn-outline-secondary" %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Content Row -->

          <div class="card-columns">

            <% @products.each do |product| %>

              <div class="card p-4 text-center">
                
                <div class="media mb-4">

                  <img class="d-flex mr-3 rounded-circle avatar" src="https://images.pexels.com/photos/70862/pexels-photo-70862.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
                  <div class="media-body">
                    <h4 class="mt-0"><%= product.product.name %></h4>
                    <p>Quantité : <%= product.quantity %>  <%= product.unit.name %></p>
                    <a class="text-muted">Date de livraison :</a>
                    <p><%= product.created_at.strftime("%-d %B %Y")  %></p>
                    <%= link_to 'Créer un évènement', new_event_path, class: 'btn btn-sm btn-outline-secondary' %>
                  </div>

                </div>

              </div>

            <% end %>

          </div>

          <hr>

          <iframe class="p-relative"
            width="100%"
            height="300px"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10516.376138168858!2d2.31667645!3d48.780095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e6712a13518e05%3A0x40b82c3688b3e80!2s92340%20Bourg-la-Reine!5e0!3m2!1sfr!2sfr!4v1575456577997!5m2!1sfr!2sfr" allowfullscreen>
          </iframe>


        </div>
  
      </div>
    </div>
  </div>
</body>