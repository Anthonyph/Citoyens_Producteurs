<section class="form-style-1 bg-hue-yellow py-5 background-cover">
<div class="container">
  <div class="row">
    <div class="col-sm-7 col-10 mx-auto">
      <div class="card p-4 my-4 material-shadow">
      <h3 class="lighter text-center py-2">Mon expérience :</h3>
      <hr>
        <%= form_with(model: @feedback, url: [@feedback.feedbackable, @feedback], local: true) do |form| %>
          <section id="like" class="rating">
            <input type="radio" id="heart_5" name="like" value="5" />
            <label for="heart_5" title="Five">&#10084;</label>

            <input type="radio" id="heart_4" name="like" value="4" />
            <label for="heart_4" title="Four">&#10084;</label>

            <input type="radio" id="heart_3" name="like" value="3" />
            <label for="heart_3" title="Three">&#10084;</label>

            <input type="radio" id="heart_2" name="like" value="2" />
            <label for="heart_2" title="Two">&#10084;</label>

            <input type="radio" id="heart_1" name="like" value="1" />
            <label for="heart_1" title="One">&#10084;</label>
          </section>

        <p><%= form.text_area :content, class:"form-control" %></p>
        <h6> Noter mon expérience </h6>
        <p><%= form.number_field :rating, in: 0..5, step: 1, class:"form-control" %></p>

        <%= form.submit "Envoyer", class:"btn btn-success btn-rounded" %>
    <% end %>
      </div>
    </div>
  </div>
</div>
</section>
