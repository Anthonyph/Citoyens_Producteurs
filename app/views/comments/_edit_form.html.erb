<div class="card">
  <h5 class="card-header">Modifier un commentaire <%= link_to image_tag(("comment.png"), class:"comment_icon float-right"), event_path(@event) %> <span class="float-right"><%= @event.comments.count %></span> </h5>
  <div class="card-body"> 
    <div class='container'>

      <%= form_with(model: @comment, local: true) do |form| %>
          <h6> Nouveau commentaire : </h6>
          <p><%= form.text_area :text, class: 'form-control' %></p>
          <%= form.hidden_field :event_id, value: @event.id %>
          <%= form.hidden_field :user_id, value: current_user.id %>

          <button type="submit" class="btn btn-success btn-rounded">Modifier</button>
          
      <% end %>

    </div>
  </div>
</div>
