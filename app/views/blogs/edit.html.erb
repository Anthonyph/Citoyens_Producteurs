<div class="container">
  <div class="card material-shadow my-5" id="event">
    <div class="card-body p-4">

      <div class="row">
        <div class="col-12 mx-auto text-center">
        
          <h1 class="text-center">Modifi√© un article :</h1>

          <hr>

          <%if flash[:danger] %>
            <div class="alert alert-danger text-center" role="alert">
              <%=flash[:danger] %>
            </div>
          <% end %>
          
          <%= form_with model: @blog, local: true do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div class ="form-group">
              <%=  f.text_field :title, class:"form-control", placeholder: "Titre..."%>
            </div>
            <div class ="form-group">
              <%=  f.text_area :content, style: "height:360px;", class:"form-control", placeholder: "Dis nous tout..."%>
            </div>
            <hr>
            <div class ="form-group">
              <button type ="submit" class="btn-lg btn-success btn-rounded">Valider</button>
            </div>
          <%end%>
          
        </div>
      </div>

    </div>
  </div>
</div>
